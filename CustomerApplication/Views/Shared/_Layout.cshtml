@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MCBA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <!-- Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MCBA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    @{ bool isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue; }
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Deposit">Deposit</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Withdraw">Withdraw</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Transfer">Transfer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Statements" asp-action="Index">Statements</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="BillPay" asp-action="Index">BillPay</a>
                            </li>
                        }
                    </ul>
                    @if (isLoggedIn)
                    {
                        @if (@Context.Session.GetString(nameof(Customer.ProfilePicture)) is not null)
                        {
                            <img style="width: 55px; height: 55px; object-fit: contain; background-color: #d9e9ff" alt="Profile picture"
                                 src="@Url.Content($"~/ProfilePictures/{Context.Session.GetString(nameof(Customer.ProfilePicture))}")">
                        }
                        else
                        {
                            <img style="width: 55px; height: 55px; object-fit: contain; background-color: #d9e9ff"
                                 src="@Url.Content("~/ProfilePictures/default.png")" alt="Profile picture">
                        }
                        <a class="navbar-text" asp-controller="Profile" asp-action="Index">@Context.Session.GetString(nameof(Customer.Name))</a>
                        <a class="btn btn-primary" asp-controller="Login" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-controller="Login" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container-sm mt-5 mb-5" style="max-width: 980px;">@RenderBody()</main>
    <footer class="container">
        <p class="text-center">
            COSC2363 Web Development Technologies<br>
            Assignment 2: Internet Banking Website<br>
            Carelle Mulawa-Richards (s3749114)<br>
        </p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>