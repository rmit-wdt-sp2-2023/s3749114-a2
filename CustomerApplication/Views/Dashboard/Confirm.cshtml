@model CustomerApplication.Models.TransactionViewModel
@{ ViewData["Title"] = "Confirm"; }

<h1>Confirm @Model.TransactionType</h1>
<form asp-action="Result">
    <input type="hidden" asp-for="TransactionType">
    <div class="mb-3">
        <label asp-for="AccountNumber" class="control-label"></label>
        <input asp-for="AccountNumber" class="form-control-plaintext" readonly>
    </div>
    <div class="mb-3">
        <label asp-for="AccountType" class="control-label2"></label>
        <input asp-for="AccountType" class="form-control-plaintext" readonly>
    </div>
    @if (Model.TransactionType == TransactionType.Transfer)
    {
        <div class="mb-3">
            <label asp-for="DestinationNumber" class="control-label2"></label>
            <input asp-for="DestinationNumber" class="form-control-plaintext" readonly>
        </div>
    }
    <div class="mb-3">
        <label asp-for="Amount" class="control-label mb-2"></label>
        <input asp-for="Amount" class="form-control-plaintext" readonly>
    </div>
    @if (Model.Comment is not null)
    {
        <div class="mb-3">
            <label asp-for="Comment" class="control-label mb-2"></label>
            <input asp-for="Comment" class="form-control-plaintext" readonly>
        </div>
    }
    <div class="mb-3">
        <button asp-action="Index" class="btn btn-secondary">Cancel</button>
        <button type="submit" class="btn btn-primary">Confirm</button>
    </div>
</form>
