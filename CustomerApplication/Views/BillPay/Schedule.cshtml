@model BillPayViewModel
@{ ViewData["Title"] = "Schedule BillPay"; }

<h1>Schedule BillPay</h1>
<form asp-action="Confirm">

    <fieldset>
        <legend>From</legend>
        <div class="mb-3">
            @foreach (AccountViewModel a in Model.AccountViewModels)
            {
                <input type="radio" asp-for="AccountNumber" value="@a.AccountNumber" id="@a.AccountNumber" class="btn-check">
                <label class="btn btn-outline-primary w-100 text-start" for="@a.AccountNumber">
                    <span class="row">
                        <span class="col">
                            @a.AccountType<br>
                            @a.AccountNumber
                        </span>
                        <span class="col">
                            @Html.DisplayNameFor(x => a.Balance)<br>
                            @Html.DisplayFor(x => a.Balance)
                        </span>
                        <span class="col">
                            @Html.DisplayNameFor(x => a.AvailableBalance)<br>
                            @Html.DisplayFor(x => a.AvailableBalance)
                        </span>
                    </span>
                </label>
                <br>
            }
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset>
        <legend>To</legend>
    </fieldset>

    <fieldset>
        <legend>Details</legend>

        <div class="mb-3">
            <label asp-for="Period" class="control-label"></label>
            <select asp-for="Period" asp-items="Html.GetEnumSelectList<Period>()" class="form-select"></select>
            <span asp-validation-for="Period" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-text">$</div>
                <input asp-for="Amount" class="form-control">
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ScheduledTimeUtc" class="control-label"></label>
            <input asp-for="ScheduledTimeUtc" class="form-control">
            <span asp-validation-for="ScheduledTimeUtc" class="text-danger"></span>
        </div>
    </fieldset>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Continue</button>
    </div>
</form>
<a asp-action="Index">Go back to BillPay</a>