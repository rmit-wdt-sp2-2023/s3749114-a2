@model BankLibrary.Models.Customer
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h1>My Accounts</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td>@Html.DisplayFor(x => account.AccountNumber)</td>
                    <td>@Html.DisplayFor(x => account.AccountType)</td>
                    <td><a class="btn btn-primary" asp-action="Deposit" asp-route-id="@account.AccountNumber">Deposit</a></td>
                </tr>
             }
        </tbody>
    </table>
</div>
