@model ProfileViewModel
@{ ViewData["Title"] = "Edit details"; }

<div class="border rounded p-5">
    <h1 class="mb-5">Edit details</h1>
    <form asp-action="SubmitEditDetails">
        <div class="mb-3">
            <label asp-for="Name" class="control-label mb-2"></label>
            <input asp-for="Name" class="form-control" value=@Model.Name>
            <span asp-validation-for="Name" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TFN" class="control-label mb-2"></label>
            <input asp-for="TFN" class="form-control" value=@Model.TFN>
            <div class="form-text mt-2">Must be of the format: XXX XXX XXX</div>
            <span asp-validation-for="TFN" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="control-label mb-2"></label>
            <input asp-for="Address" class="form-control" value=@Model.Address>
            <span asp-validation-for="Address" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City" class="control-label mb-2"></label>
            <input asp-for="City" class="form-control" value=@Model.City>
            <span asp-validation-for="City" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="State" class="control-label mb-2"></label>
            <input asp-for="State" class="form-control" value=@Model.State>
            <div class="form-text">Enter 2 or 3 lettered Australian state, e.g., SA, VIC, NSW, etc.</div>
            <span asp-validation-for="State" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PostCode" class="control-label mb-2"></label>
            <input asp-for="PostCode" class="form-control" value=@Model.PostCode>
            <span asp-validation-for="PostCode" class="text-danger mt-2 d-block"></span>
        </div>
        <div>
            <label asp-for="Mobile" class="control-label mb-2"></label>
            <input asp-for="Mobile" class="form-control" value=@Model.Mobile>
            <div class="form-text">Must be of the format: 04XX XXX XXX</div>
            <span asp-validation-for="Mobile" class="text-danger mt-2 d-block"></span>
        </div>
        @Html.ValidationMessage("Other", new { @class = "text-danger mt-2 d-block" })
        <div class="d-grid gap-2 d-md-flex mt-5 pt-4">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-outline-primary" asp-action="Index">Cancel</a>
        </div>
    </form>
    
</div>
