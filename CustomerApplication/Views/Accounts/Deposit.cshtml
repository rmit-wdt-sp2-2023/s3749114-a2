@model CustomerApplication.Models.TransactionViewModel
@{ ViewData["Title"] = "Deposit"; }

<h1>Deposit</h1>
<form asp-action="Deposit">
    <input type="hidden" asp-for="TransactionType">
    <div class="mb-3">
        <label asp-for="AccountNumber" class="control-label"></label>
        <input asp-for="AccountNumber" class="form-control-plaintext" readonly>
    </div>
    <div class="mb-3">
        <label asp-for="AccountType" class="control-label"></label>
        <input asp-for="AccountType" class="form-control-plaintext" readonly>
    </div>
    <div class="mb-3">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control-plaintext" readonly>
    </div>
    <div class="mb-3">
        <label asp-for="Amount" class="control-label"></label>
        <div class="input-group">
            <div class="input-group-text">$</div>
            <input asp-for="Amount" class="form-control">
        </div>
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Comment" class="control-label mb-2"></label><span> (optional)</span>
        <input asp-for="Comment" class="form-control">
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input type="submit" value="Continue" class="btn btn-primary">
    </div>
</form>
<a asp-action="Index">Go back to Accounts</a>