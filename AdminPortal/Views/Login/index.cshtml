@model LoginSearchViewModel
@{ ViewData["Title"] = "Manage Logins"; }

<div class="border rounded p-5">
    <h1 class="mb-5">Manage Logins</h1>
    <form asp-action="Search">
        <div class="d-flex">
            <input asp-for="LoginID" class="form-control me-2" type="search" placeholder="Enter login ID">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
        <span asp-validation-for="LoginID" class="text-danger mt-2 d-block"></span>
    </form>
</div>