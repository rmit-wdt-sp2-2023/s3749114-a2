@model LoginViewModel
@{ ViewData["Title"] = "Home"; }

<div class="border rounded p-5">
    <h1 class="mb-5">Login to MCBA Admin Portal</h1>
    <form asp-action="SubmitLogin">
        <div class="mb-3">
            <label asp-for="Username" class="control-label mb-2"></label>
            <input asp-for="Username" class="form-control">
            <span asp-validation-for="Username" class="text-danger mt-2 d-block"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="control-label mb-2"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger mt-2 d-block"></span>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger mt-2 d-block" })
        </div>
        <button type="submit" class="btn btn-primary mt-5">Login</button>
    </form>
</div>